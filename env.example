# Configurações de Banco de Dados
# Desenvolvimento e Produção: PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/som_popular

# Para produção, use uma URL de conexão segura:
# DATABASE_URL=postgresql://username:password@host:port/database

# Configurações de Autenticação
BETTER_AUTH_SECRET=your-super-secret-key
BETTER_AUTH_TELEMETRY=0

# Configurações de Email (Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=your-email@domain.com

# Configurações de Upload de Arquivos
STORAGE_PROVIDER=local

# Para produção futura (AWS S3)
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_bucket_name

# Para produção futura (Google Cloud Storage)
# STORAGE_PROVIDER=gcs
# GOOGLE_CLOUD_PROJECT_ID=your_project_id
# GOOGLE_CLOUD_BUCKET=your_bucket_name
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Para produção futura (Azure Blob Storage)
# STORAGE_PROVIDER=azure
# AZURE_STORAGE_ACCOUNT=your_storage_account
# AZURE_STORAGE_KEY=your_storage_key
# AZURE_STORAGE_CONTAINER=your_container_name

# Monitoramento de Erros (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_ORG=
SENTRY_PROJECT=
ENABLE_SENTRY=false
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ENABLE_SENTRY=false
